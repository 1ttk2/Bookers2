<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
         <h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>

          <% if @book.errors.any? %>
            <%= @book.errors.count %>errors
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
          <% end %>

          <div class="form-group">
            <label for="book_title">Title</label>
              <%= f.text_field :title %>
          </div>

          <div class="form-group">
            <label for="book_option">Opinion</label>
              <%= f.text_field :body %>
          </div>

          <div class="form-group">
            <%= f.submit "Update Book", class: "btn btn-sm btn-success" %>
          </div>
        <% end %>
        <%= link_to "Show", book_path(@book.id) %>
        |
        <a class="back" href="/books">Back</a>
      </div>
    </div>
  </div>
</main>

